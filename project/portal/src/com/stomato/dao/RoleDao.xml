<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stomato.dao.RoleDao">

	<resultMap type="com.stomato.domain.Role" id="role"> 
		<result property="id" column="id" />
		<result property="roleName" column="role_name" />
		<result property="status" column="status" />
		<result property="createDate" column="create_date"/>
	</resultMap>
	
	<insert id="addRole" parameterType="com.stomato.domain.Role">
		insert into t_role(role_name, status, create_date) values(#{roleName}, #{status}, now())
	</insert>
	
	<select id="getRole" parameterType="com.stomato.domain.Role" resultMap="role" >
		select id,role_name, status, create_date from t_role where id=#{id}
	</select>
	 
	<select id="getAllRoleList" resultMap="role" >
		select id,role_name, status, create_date from t_role
	</select>
	<update id="updateRole" parameterType="com.stomato.domain.Role">
		update t_role
        <set>
            <if test="role_name != null">name=#{roleName},</if>
            <if test="status != status">status=#{status},</if>
            create_date=now()
        </set>
        
		where app_key=#{key} and uid=#{uid} and is_del=0
	</update>
	
	<update id="deleteRole" parameterType="com.stomato.domain.Role">
        update t_role set is_del=1 where id=#{id}
	</update>
	
</mapper>