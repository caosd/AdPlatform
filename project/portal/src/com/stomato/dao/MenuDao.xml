<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stomato.dao.MenuDao">

	<resultMap type="com.stomato.domain.Menu" id="menu"> 
		<result property="id" column="id" />
		<result property="name" column="menuname" />
		<result property="desc" column="description" />
		<result property="path" column="path"/>
		<result property="parent" column="parent"/>
		<result property="visible" column="visible"/>
		<result property="orderNo" column="order_no"/>
	</resultMap>
	<select id="listTotal" parameterType="com.stomato.domain.Menu" resultType="int" >
		select count(1) from t_menu where _status = 0
		<if test="name != null">
			<if test="name != ''">
				and menuname = #{name}
			</if>
		</if>
		<if test="visible != null">and visible = #{visible}</if>
	</select>
	<select id="listMenu" parameterType="com.stomato.domain.MenuParam" resultMap="menu" >
		SELECT
			id,
			menuname,
			description,
			path,
			parent,
			visible,
			order_no
		FROM
			t_menu
		where _status = 0
		<if test="parent != null">and parent = #{parent}</if>
		<if test="name != null">
			<if test="name != ''">
				and menuname = #{name}
			</if>
		</if>
		<if test="visible != null">and visible = #{visible}</if>
		order by order_no asc
		<if test="slimt != null">limit #{slimt},#{pageSize}</if>
	</select>
	<select id="listParentMenu" resultMap="menu" >
		SELECT
			id,
			menuname,
			description,
			path,
			parent,
			visible,
			order_no
		FROM
			t_menu
		WHERE
			_status = 0 and parent = 0 order by order_no asc
	</select>
	<select id="listParentMenuByRole" parameterType="int" resultMap="menu" >
		SELECT
			tb1.id,
			menuname,
			description,
			path,
			parent,
			visible,
			order_no
		FROM
			t_menu tb1
		INNER JOIN t_role_menu AS tb2 ON tb1.id = tb2.menu_id
		WHERE
			tb2.role_id = #{roleId} and tb1._status = 0 and tb1.visible = 1 and tb1.parent = 0 order by tb1.order_no asc
	</select>
